<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_nav_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="80dp"></ImageView>
    </RelativeLayout>

    <Button
        android:layout_margin="15dp"
        android:layout_below="@+id/main_nav_rl"
        android:id="@+id/intro_bt"
        android:layout_width="300dp"
        android:background="@drawable/intro"
        android:layout_height="200dp"></Button>

    <Button

        android:layout_alignTop="@id/intro_bt"
        android:layout_toRightOf="@+id/intro_bt"
        android:id="@+id/search_bt"
        android:background="@drawable/search"
        android:layout_width="300dp"
        android:layout_height="200dp"
        ></Button>

    <Button
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/intro_bt"
        android:layout_toRightOf="@id/search_bt"
        android:id="@+id/question_bt"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/qna"
        />

    <Button
        android:layout_alignLeft="@id/intro_bt"
        android:layout_below="@id/intro_bt"
        android:id="@+id/game_fee_bt"
        android:background="@drawable/gamebill"
        android:layout_width="300dp"
        android:layout_height="100dp">

    </Button>

    <Button
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/intro_bt"
        android:layout_below="@id/game_fee_bt"
        android:id="@+id/product_bt"
        android:background="@drawable/dessert"
        android:layout_width="300dp"
        android:layout_height="100dp">
    </Button>

    <Button
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/game_fee_bt"
        android:layout_toRightOf="@id/game_fee_bt"
        android:id="@+id/beginner"
        android:layout_width="300dp"
        android:background="@drawable/beginner"
        android:layout_height="100dp"></Button>

    <Button
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/beginner"
        android:layout_below="@id/beginner"
        android:id="@+id/coupon"
        android:background="@drawable/coupon"
        android:layout_width="200dp"
        android:layout_height="100dp"></Button>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/coupon"
        android:layout_alignRight="@id/beginner"
        android:background="@drawable/wifi"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/coupon"></Button>

    <Button
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/coupon"
        android:layout_alignTop="@id/beginner"
        android:layout_toRightOf="@id/beginner"
        android:id="@+id/recommend_game_bt"
        android:layout_width="300dp"
        android:background="@drawable/recommend"
        android:layout_height="200dp"></Button>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="WIFI : abcef04fgg"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
</RelativeLayout>