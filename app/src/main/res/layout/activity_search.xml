<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".biz.search.SearchActivity">

    <RelativeLayout
        android:id="@+id/nav_rl"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:hint="게임 이름"
            android:layout_height="wrap_content"
            android:id="@+id/search_et">

        </EditText>
        <Button
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_et"
            android:text="검색하기"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ppl_ll"
        android:layout_below="@+id/nav_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원구성"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인원"></TextView>
                <RadioGroup
                    android:id="@+id/ppl_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/ppl2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="2인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl4_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4인">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도"></TextView>
                <RadioGroup
                    android:id="@+id/level_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/level0_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="상관없음">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level1_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쉬움">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중간">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어려움">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ppl_ll"
        android:layout_width="match_parent"
        android:id="@+id/type_ll"
        android:layout_height="wrap_content">
        <TextView
            android:text="장르선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <RadioGroup
            android:id="@+id/type_rg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/type0_radio_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="상관없음">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="순발력">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_inference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추리">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_gura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구라">
            </RadioButton>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_below="@id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_box_tv"
        android:text="검색해 주세요"></TextView>

    <ListView
        android:id="@+id/game_listview"
        android:layout_below="@id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>