<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#ffffff"
    tools:context=".biz.search.SearchActivity">

    <RelativeLayout
        android:id="@+id/nav_rl"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>

        <EditText
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="#ffffff"
            android:layout_width="200dp"
            android:textColor="#000000"
            android:hint="게임 이름"
            android:layout_height="wrap_content"
            android:id="@+id/search_et">

        </EditText>

        <Button
            android:layout_alignTop="@id/search_et"
            android:layout_alignBottom="@id/search_et"
            android:background="@drawable/search_bt"
            android:id="@+id/search_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/search_et"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/nav_rl"
        android:id="@+id/top_txt_ll"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_txt"
            android:src="@drawable/top_txt"
            android:layout_width="match_parent"
            android:layout_height="20dp"></ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/top_orange_line"
        android:layout_below="@+id/top_txt_ll"
        android:background="#ffc000"
        android:layout_width="match_parent"
        android:layout_height="2dp"></TextView>

    <LinearLayout
        android:id="@+id/ppl_ll"
        android:layout_below="@+id/top_orange_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="#3b3b3b"
            android:layout_width="300dp"
            android:layout_height="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="인원구성 (필수)"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:background="#faf9f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#5b5757"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인원"></TextView>
                <RadioGroup
                    android:id="@+id/ppl_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:button="@android:color/transparent"
                        android:background="@drawable/btn_round"
                        android:id="@+id/ppl2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#3b3b3b"
                        android:text="2인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl4_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4인">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#5b5757"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도"></TextView>
                <RadioGroup
                    android:id="@+id/level_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/level0_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="상관없음">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level1_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쉬움">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중간">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어려움">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ppl_ll"
        android:layout_width="match_parent"
        android:id="@+id/type_ll"
        android:layout_height="wrap_content">
        <TextView
            android:text="장르선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <RadioGroup
            android:id="@+id/type_rg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/type0_radio_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="상관없음">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="순발력">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_inference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추리">
            </RadioButton>

            <RadioButton
                android:id="@+id/type_gura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구라">
            </RadioButton>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_below="@id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_box_tv"
        android:text="검색해 주세요"></TextView>

    <ListView
        android:id="@+id/game_listview"
        android:layout_below="@id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>