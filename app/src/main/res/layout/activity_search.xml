<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biz.search.SearchActivity">

    <RelativeLayout
        android:id="@+id/nav_rl"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="검색하기"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ppl_ll"
        android:layout_below="@+id/nav_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원구성"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인원"></TextView>
                <RadioGroup
                    android:id="@+id/ppl_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/ppl2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="2인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3인">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/ppl4_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4인">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도"></TextView>
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/level1_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="1">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level2_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2">
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/level3_radio_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ppl_ll"
        android:layout_width="match_parent"
        android:id="@+id/type_ll"
        android:layout_height="wrap_content">
        <TextView
            android:text="장르선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/game_listview"
        android:layout_below="@id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>