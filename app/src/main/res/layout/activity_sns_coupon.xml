<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".biz.coupon.CouponActivity">

    <RelativeLayout
        android:id="@+id/main_nav_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="80dp"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/main_nav_rl"
        android:background="#766765"
        android:layout_width="600dp"
        android:layout_height="400dp">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/coupon_back_bt"
            android:src="@drawable/backarrow"
            android:layout_width="30dp"
            android:layout_height="60dp"/>

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/coupon_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/coupon_title"
            android:layout_width="150dp"
            android:layout_height="50dp">
        </ImageView>

        <Button
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/make_coupon_bt"
            android:layout_below="@id/coupon_title"
            android:background="@drawable/new_coupon"
            android:text="1,000\\ D/C"
            android:fontFamily="@font/bmdo"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="100dp">
        </Button>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_below="@id/make_coupon_bt"
            android:layout_centerHorizontal="true"
            android:id="@+id/coupon_intro"
            android:src="@drawable/coupon_intro"
            android:layout_width="150dp"
            android:layout_height="40dp"></ImageView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/coupon_tx1"
            android:layout_below="@id/coupon_intro"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bmdo"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/coupon_tx3"
            android:layout_below="@id/coupon_tx1"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/bmdo"
            android:textColor="#ffffff"
            android:text="인스타 페이스북 블로그 등 SNS에 글 작성후 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/coupon_tx4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_tx3"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/coupon_tx3"
            android:fontFamily="@font/bmdo"
            android:text="카운터에 보여주시면 즉시 할인해 드립니다"
            android:textColor="#ffffff"></TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/coupon_tx5"
            android:layout_below="@id/coupon_tx4"
            android:layout_alignLeft="@id/coupon_tx4"
            android:fontFamily="@font/bmdo"
            android:textColor="#FFBB00"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/coupon_code"
            android:layout_below="@id/coupon_tx4"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bmdo"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/hash1_tx"
            android:layout_below="@id/coupon_code"
            android:layout_alignLeft="@+id/coupon_tx3"
            android:fontFamily="@font/bmdo"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="#강남역보드게임카페 #강남역룸카페  #강남역놀거리  #강남역데이트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/hash1_tx"
            android:layout_alignLeft="@+id/coupon_tx3"
            android:fontFamily="@font/bmdo"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="#보드게임카페  #보드게임   #펀타임"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>


</RelativeLayout>