<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top_txt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/top_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-150dp"
            android:src="@drawable/top_txt"></ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/top_orange_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/top_txt_ll"
        android:layout_marginLeft="30dp"
        android:background="#ffc000"></TextView>

    <LinearLayout
        android:id="@+id/ppl_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_orange_line"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="#3b3b3b">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmdo"
                android:text="인원구성 (필수)"
                android:textColor="#ffffff"></TextView>

            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/search_back_bt"
                android:src="@drawable/backarrow"
                android:layout_width="30dp"
                android:layout_height="60dp"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#faf9f5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="인원"
                    android:textColor="#5b5757" />

                <RadioGroup
                    android:id="@+id/ppl_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ppl2_radio_bt"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:text="   2인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl3_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    3인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl4_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    4인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl5_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    5인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl6_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    6인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl7_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    7인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl8_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="73dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    8인이상"
                        android:textColor="#3b3b3b"></RadioButton>

                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ppl_ll"
        android:layout_alignLeft="@id/ppl_ll">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#447184">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/bmdo"
                android:text="장르선택"
                android:textColor="#ffffff"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:background="#faf9f5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_marginTop="20dp"
                android:id="@+id/type_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/type0_radio_bt"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_round"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="   상관없음"
                    android:textColor="#3b3b3b"></RadioButton>


                <RadioButton
                    android:id="@+id/type_1"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_round"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:button="@android:color/transparent"
                    android:text="   파티"
                    android:textColor="#3b3b3b"></RadioButton>


                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_2"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   팀플"
                    android:textColor="#3b3b3b"
                    ></RadioButton>


            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bottom_orange_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/type_ll"
        android:layout_alignLeft="@id/ppl_ll"
        android:background="#ffc000"></TextView>

</RelativeLayout>