<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top_txt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/top_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-150dp"
            android:src="@drawable/top_txt"></ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/top_orange_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/top_txt_ll"
        android:layout_marginLeft="30dp"
        android:background="#ffc000"></TextView>

    <LinearLayout
        android:id="@+id/ppl_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_orange_line"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="#3b3b3b">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmdo"
                android:text="인원구성 (필수)"
                android:textColor="#ffffff"></TextView>

            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/search_back_bt"
                android:src="@drawable/backarrow"
                android:layout_width="30dp"
                android:layout_height="60dp"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#faf9f5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="인원"
                    android:textColor="#5b5757" />

                <RadioGroup
                    android:id="@+id/ppl_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ppl2_radio_bt"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:text="   2인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl3_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    3인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl4_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    4인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl5_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    5인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl6_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    6인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl7_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    7인"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/ppl8_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="73dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="    8인이상"
                        android:textColor="#3b3b3b"></RadioButton>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="난이도"
                    android:textColor="#5b5757"></TextView>

                <RadioGroup
                    android:id="@+id/level_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/level0_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="73dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:text="    상관없음"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/level1_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="   낮음"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/level2_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="   중간"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:id="@+id/level3_radio_bt"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="68dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:text="   높음"
                        android:textColor="#3b3b3b"></RadioButton>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/play_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ppl_ll"
        android:layout_alignLeft="@id/ppl_ll">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="#c03737">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmdo"
                android:text="플레이시간"
                android:textColor="#ffffff"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:background="#faf9f5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_marginTop="15dp"
                android:id="@+id/time_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/time0_radio_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="     상관없음"
                    android:textColor="#3b3b3b"></RadioButton>

                <RadioButton
                    android:id="@+id/time_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:text="     10분이하"
                    android:textColor="#3b3b3b"></RadioButton>

                <RadioButton
                    android:id="@+id/time_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:text="    10분"
                    android:textColor="#3b3b3b"></RadioButton>

                <RadioButton
                    android:id="@+id/time_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:text="     20분"
                    android:textColor="#3b3b3b"></RadioButton>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_time_ll"
        android:layout_alignLeft="@id/ppl_ll">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#447184">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/bmdo"
                android:text="장르선택"
                android:textColor="#ffffff"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:background="#faf9f5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_marginTop="20dp"
                android:id="@+id/type_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/type0_radio_bt"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_round"
                    android:onClick="oneRadioButtonClicked"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="   상관없음"
                    android:textColor="#3b3b3b"></RadioButton>

                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/type_strategy"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="48dp"
                    android:onClick="oneRadioButtonClicked"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   전략"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_clue"
                    android:background="@drawable/btn_round"
                    android:onClick="oneRadioButtonClicked"
                    android:button="@android:color/transparent"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   추리"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_simri"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   심리"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_nego"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   협상/경매"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_speed"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="   순발력"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                <RadioButton
                    android:layout_marginLeft="8dp"
                    android:id="@+id/type_binjung"
                    android:background="@drawable/btn_round"
                    android:button="@android:color/transparent"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="    빈정상함"
                    android:textColor="#3b3b3b"
                    ></RadioButton>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/type_economy"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:background="@drawable/btn_round"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:button="@android:color/transparent"
                    android:text="   경제"
                    android:textColor="#3b3b3b"></RadioButton>


                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_memory"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="70dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   기억력"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_teamplay"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   팀플"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_cowork"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   협력"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_luck"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   운빨"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_mapia"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="70dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   마피아"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_brain"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   두뇌싸움"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_betting"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   배팅"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_bluffing"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="70dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   뻥치기"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/type_nobrain"
                        android:layout_width="120dp"
                        android:layout_height="28dp"
                        android:background="@drawable/btn_round"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:button="@android:color/transparent"
                        android:text="   머리조금만쓰는"
                        android:textColor="#3b3b3b"></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_party"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   파티"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_tackle"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   딴지"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_knowlege"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   지식"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                    <RadioButton
                        android:layout_marginLeft="8dp"
                        android:id="@+id/type_puzzle"
                        android:background="@drawable/btn_round"
                        android:button="@android:color/transparent"
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="   퍼즐"
                        android:textColor="#3b3b3b"
                        ></RadioButton>

                </LinearLayout>
            </RadioGroup>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bottom_orange_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/type_ll"
        android:layout_alignLeft="@id/ppl_ll"
        android:background="#ffc000"></TextView>

</RelativeLayout>